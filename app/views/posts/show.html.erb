<body>
  <h1><%=@post.title%></h1>

  <p> <%= @post.body %> </p>

  <% if @post.replies %>
  <h1> Replies: </h1>

  <% @post.replies.each do |reply| %>
      <p>
      <%= reply.body %> <br/>
       Date: <%= reply.created_at.strftime("%B %d %Y") %>
      </p>

  <% end %>
<% end  %>

<br/>
<%= link_to "Write a reply!", new_post_reply_path(@post, @replies) %>
<br/>

  <script src="/javascripts/app.js"></script>
</body>
